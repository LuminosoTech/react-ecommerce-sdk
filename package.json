{
  "name": "@luminoso/react-ecommerce-sdk",
  "version": "0.0.1",
  "description": "React SDK for Luminoso ecommerce",
  "license": "Apache-2.0",
  "module": "dist/react-ecommerce-sdk.es.js",
  "typings": "types/index.d.ts",
  "main": "dist/react-ecommerce-sdk.js",
  "browser": "dist/react-ecommerce-sdk.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "dist",
    "types",
    "LICENSE",
    "CHANGELOG",
    "README.md"
  ],
  "scripts": {
    "tsc": "rm -rf lib/ && tsc",
    "tsc:watch": "rm -rf lib/ && tsc --watch",
    "build": "rm -rf dist/ && rollup -c --environment NODE_ENV:production",
    "build:watch": "rm -rf dist/ && rollup -c --watch --environment NODE_ENV:development",
    "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest --silent",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuminosoTech/react-secommerce-dk.git"
  },
  "author": "Fabrizio Rodin-Miron",
  "bugs": {
    "url": "https://github.com/LuminosoTech/react-ecommerce-sdk/issues"
  },
  "homepage": "https://github.com/LuminosoTech/react-ecommerce-sdk#readme",
  "dependencies": {
    "@luminoso/ecommerce-sdk": "^0.0.2",
    "esbuild": "^0.12.6"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/react": "^17.0.13",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fs-extra": "^10.0.0",
    "prettier": "^2.3.0",
    "rollup": "^2.52.7",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-esbuild": "^4.5.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^26.5.6",
    "tslib": "^2.2.0",
    "typescript": "^4.3.5"
  }
}
